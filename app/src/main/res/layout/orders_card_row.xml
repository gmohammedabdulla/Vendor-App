
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardElevation="5dp">
       <!-- card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp" -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:text="Order ID:10265"
                android:id="@+id/order_id"
                android:layout_marginLeft="26dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="31dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/view"
                android:layout_below="@+id/order_id"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Total:"
                android:id="@+id/total"
                android:layout_marginRight="89dp"
                android:layout_marginEnd="89dp"
                android:layout_above="@+id/view"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="User Name"
                android:id="@+id/user_name"
                android:layout_above="@+id/total"
                android:layout_alignLeft="@+id/order_id"
                android:layout_alignStart="@+id/order_id" />

            <Button
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="Order Confirm"
                android:id="@+id/confirm"
                android:layout_below="@+id/recycler_view_items"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
            <Button
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="Order Ready"
                android:id="@+id/ready"
                android:layout_below="@+id/confirm"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>

            <Button
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="Out For Delivery"
                android:id="@+id/out"
                android:layout_below="@+id/ready"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>

            <Button
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="Order Completed"
                android:id="@+id/completed"
                android:layout_below="@+id/out"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

